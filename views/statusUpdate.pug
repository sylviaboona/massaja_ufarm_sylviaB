body
    .row
        .col-4
        .col-4.update-page
            img.farmerUploadImages(src='img/greenLeafSideImage1.png' alt='')
            h4#registerFO Update product status
            form(name='uploadForm' action="/updateProduct?id="+user._id method='POST')
              .form-group.row
                .col-md-2
                .col-md-8
                    select#inputStatus.form-control(name='status')
                        option(value="Pending" selected = user.status === "Pending") Pending
                        option(value="Approved" selected = user.status === "Approved") Approved
                        option(value="Declined" selected = user.status === "Declined") Declined
                .col-md-2
              .form-group.row
                .col-md-2
                .col-md-8
                   button#registerFO.form-control.btn.btn-primary(type='submit')
                        | Update
                .col-md-2
        .col-4  
