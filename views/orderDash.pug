head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Massajja Ufarm
  link(rel='stylesheet' href='css/bootstrap/bootstrap.css')
  link(rel='stylesheet' href='css/style.css')
nav.navbar.navbar-expand-lg.navbar-light.nav-link 
  a.navbar-brand(href='/') UFARM &nbsp&nbsp |
  button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
    span.navbar-toggler-icon
  #navbarSupportedContent.collapse.navbar-collapse
    ul.navbar-nav.mr-auto
      li.nav-item
        a.nav-link(href='/')
          | HOME 
          span.sr-only 
      li.nav-item
        a.nav-link(href='aboutUfarm') ABOUT
      li.nav-item
        a.nav-link(href='contactUfarm') CONTACT
      li.nav-item.active
        a.nav-link(href='ordersDash') ORDERS
body
  header
        h4.card-title.product-dash-heading Orders!!!
        |&nbsp
  .row.product-page-container
        if items.length
        each item in items
            .card.productcard(style='width: 17rem;')
              .card-body
                  h5.card-title Product Name: #{item.productName}
                  p.card-texts Unit Price: #{item.price}
                  p.card-texts Quantity:#{item.quantity}
                  p.card-texts Customer Contact: #{item.customerContact}  
                  p.card-texts Payment Mode:#{item.paymentMode}
                  p.card-texts Delivery:#{item.delivery}
script(src='js/jquery-3.5.1.slim.min.js')
script(src='js/popper.min.js')
script(src='js/bootstrap/bootstrap.js')