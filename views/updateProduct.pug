body
    .row
        .col-4
        .col-4.update-page
            //- img.farmerUploadImages(src='img/greenLeafSideImage1.png' alt='')
            h4#registerFO Update Your Product Here
            form(name='uploadForm' action="/updateProduct?id="+user._id method='POST')
              .form-group.row
                .col-md-6
                  input#productName.form-control(value = user.productName name ="productName")
                .col-md-6
                  input#inputPhone.form-control(value = user.phoneContact name='phoneContact')
              .form-group.row  
                .col-md-4
                  input#inputUploadDate.form-control(value = user.uploadDate name='uploadDate')
                .col-md-4
                  input#inputPrice.form-control(value = user.price name='price' )
                .col-md-4
                  input#inputUploadDate.form-control(value = user.quantity name='quantity')
              .form-group
                label(for='exampleFormControlTextarea1') Product Description
                textarea#exampleFormControlTextarea1.form-control(value = user.productDescription name="productDescription")
              fieldset
                  .form-group.form-check-inline
                    legend.col-form-label.col-sm-6.pt-0 Produce Type
                    .form-check-inline
                      input#organicType.form-check-input(type='radio' name='productType' value='Organic' checked = user.productType==="Organic")
                      label.form-check-label(for='organic')  Organic 
                    .form-check-inline
                      input#inorganicType.form-check-input(type='radio' name='productType' value='Inorganic' checked = user.productType==="Inorganic")
                      label.form-check-label(for='inorganic')  Inorganic 
              .form-group
                .form-check-inline
                  input(name='productImage' value = user.productImage readonly)
                .form-check-inline
                   button#registerFO.btn.btn-primary(type='submit')
                        | Update
        .col-4  
script(src='./js/jquery-3.5.1.slim.min.js')
script(src='./js/popper.min.js')
script(src='./js/bootstrap/bootstrap.js')